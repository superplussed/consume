= form_for @job_listing do |f|
  - if @job_listing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job_listing.errors.count, "error")} prohibited this job_listing from being saved:"
      %ul
        - @job_listing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :posted_at
    = f.date_select :posted_at
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
